<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ce.modelwhilework.presentation"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/program"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ce.modelwhilework.presentation.contextinfo.ContextInfoActivity"
            android:label="@string/title_activity_context"
            android:screenOrientation="landscape" />
        <activity
            android:name="ce.modelwhilework.presentation.contextinfo.CameraActivity"
            android:label="@string/title_activity_camera"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".LoadProcessActivity"
            android:label="@string/title_activity_open_process"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name=".DeleteProcessActivity"
            android:label="@string/title_activity_delete_process"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name=".ExportProcessActivity"
            android:label="@string/title_activity_export_process"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name="ce.modelwhilework.presentation.contextinfo.PictureActivity"
            android:label="@string/title_activity_picture"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ce.modelwhilework.presentation.contextinfo.TextActivity"
            android:label="@string/title_activity_text"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ce.modelwhilework.presentation.contextinfo.AudioActivity"
            android:label="@string/title_activity_audio"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ce.modelwhilework.presentation.contextinfo.AudioRecordActivity"
            android:label="@string/title_activity_audioRec"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="ce.modelwhilework.presentation.contextinfo.VideoActivity"
            android:label="@string/title_activity_video"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".FavoriteActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name=".NewProcessActivity"
            android:label="@string/title_activity_new_process"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Holo.Light.Dialog" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
