<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/activity_favorite_msg_RadioButtont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="10" />

    <LinearLayout
        android:id="@+id/activity_favorite_msg_LayoutCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/message"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/activity_favorite_msg_linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/activity_favorite_msg_imageViewCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:src="@drawable/msg32" />

            <EditText
                android:id="@+id/activity_favorite_msg_editTextCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:editable="false"
                android:ems="10" >

            </EditText>

            <ImageButton
                android:id="@+id/activity_favorite_msg_imageButton_ContextInfoCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:clickable="false"
                android:src="@drawable/context32" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_favorite_msg_linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/activity_favorite_msg_linearLayout2"
            android:layout_below="@+id/activity_favorite_msg_linearLayout2" >

            <CheckBox
                android:id="@+id/activity_favorite_msg_checkBoxCardSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:enabled="false"
                android:text="send to:" />

            <CheckBox
                android:id="@+id/activity_favorite_msg_checkBoxCardReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:enabled="false"
                android:text="receive from:" />

        </LinearLayout>

        <EditText
            android:id="@+id/activity_favorite_msg_editTextCardReciverSender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/activity_favorite_msg_linearLayout3"
            android:layout_below="@+id/activity_favorite_msg_linearLayout3"
            android:editable="false"
            android:ems="10" >
        </EditText>
    </LinearLayout>

</LinearLayout>