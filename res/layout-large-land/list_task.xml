<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/activity_favorite_task_RadioButtont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="10" />

    <LinearLayout
        android:id="@+id/activity_favorite_task_LayoutCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/task"
        android:gravity="top"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/activity_favorite_task_linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_favorite_task_imageViewWorkCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:src="@drawable/work32" />

            <TextView
                android:id="@+id/activity_favorite_task_textViewWorkCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/what_i_do" />

            <ImageButton
                android:id="@+id/activity_favorite_task_fragment_process_imageButton_ContextInfoCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:clickable="false"
                android:src="@drawable/context32empty" />

        </LinearLayout>

        <EditText
            android:id="@+id/activity_favorite_task_editTextWorkCardTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/activity_favorite_task_linearLayout1"
            android:layout_alignRight="@+id/activity_favorite_task_linearLayout1"
            android:layout_below="@+id/activity_favorite_task_linearLayout1"
            android:layout_weight="3"
            android:editable="false"
            android:ems="10" />

    </LinearLayout>

</LinearLayout>