<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/FavorteActivity_LayoutTaskCard"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:background="@drawable/task"
        android:gravity="top"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/FavorteActivity_editTextWorkCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/FavorteActivity_linearLayout1"
             android:layout_alignRight="@+id/FavorteActivity_linearLayout1"
             android:layout_below="@+id/FavorteActivity_linearLayout1"
            android:ems="10" />

        <LinearLayout
            android:id="@+id/FavorteActivity_linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/FavorteActivity_imageViewWorkCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/work32" />

            <TextView
                android:id="@+id/FavorteActivity_textViewWorkCard"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="What I do" />

            <ImageButton
                android:id="@+id/FavorteActivity_fragment_process_imageButton_ContextInfoCardTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/context32" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>