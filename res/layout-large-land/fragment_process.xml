<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_process_MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="left"
        android:maxHeight="50dp"
        android:minHeight="50dp" >

        <ImageButton
            android:id="@+id/fragment_process_imageButton_ContextInfoProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/context64"
            android:contentDescription="@drawable/context64" />

        <ImageButton
            android:id="@+id/fragment_process_imageButton_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/favorite"
            android:contentDescription="@drawable/favorite" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewProcessTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxHeight="30dp"
                android:minHeight="30dp"
                android:text="@string/process_title"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textViewProcessRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxHeight="30dp"
                    android:minHeight="30dp"
                    android:text="@string/process_role"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/fragment_process_textEdit_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewBin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/bin"
            android:contentDescription="@drawable/bin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/LayoutStacks"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/LayoutMainStack"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:background="@drawable/stack"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewMainStack"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <RelativeLayout
                    android:id="@+id/LayoutMainStackTaskCard"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:background="@drawable/task"
                    android:gravity="top"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/editTextWorkCardTitleMainStack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/LinearLayout01"
                        android:layout_alignRight="@+id/LinearLayout01"
                        android:layout_below="@+id/LinearLayout01"
                        android:ems="10" 
                        android:inputType="text"/>

                    <LinearLayout
                        android:id="@+id/LinearLayout01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/ImageView01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/work32"
                            android:contentDescription="@drawable/work32" />

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                            android:text="@string/fragment_process_what_i_do" />

                        <ImageButton
                            android:id="@+id/fragment_process_imageButton_ContextInfoCardTask_MainStack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/context32"
                            android:contentDescription="@drawable/context32" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/LayoutMainStackMsgCard"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:background="@drawable/message"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/LinearLayout03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/ImageView03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/msg32"
                            android:contentDescription="@drawable/msg32" />

                        <EditText
                            android:id="@+id/editTextMsgCardTitleMainStack"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="text"/>

                        <ImageButton
                            android:id="@+id/fragment_process_imageButton_ContextInfoCardMsg_MainStack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/context32"
                            android:contentDescription="@drawable/context32" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/LinearLayout03"
                        android:layout_below="@+id/LinearLayout03" >

                        <CheckBox
                            android:id="@+id/checkBoxMsgCardSendMainstack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_process_send_to" />

                        <CheckBox
                            android:id="@+id/checkBoxMsgCardReciveMainStack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_process_receive_from" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editTextMsgCardReciverSenderMainStack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/LinearLayout04"
                        android:layout_below="@+id/LinearLayout04"
                        android:ems="10"
                        android:inputType="textPersonName" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LayoutSideStack"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/stack"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewSideStack"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <RelativeLayout
                    android:id="@+id/LayoutSideStackTaskCard"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:background="@drawable/task"
                    android:gravity="top"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/editTextWorkCardTitleSideStack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/LinearLayout02"
                        android:layout_alignRight="@+id/LinearLayout02"
                        android:layout_below="@+id/LinearLayout02"
                        android:ems="10"
                        android:inputType="text"/>

                    <LinearLayout
                        android:id="@+id/LinearLayout02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/ImageView02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/work32"
                            android:contentDescription="@drawable/work32" />

                        <TextView
                            android:id="@+id/TextView02"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:gravity="center_horizontal"
                            android:text="@string/fragment_process_what_i_do" />

                        <ImageButton
                            android:id="@+id/fragment_process_imageButton_ContextInfoCardTask_SideStack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/context32"
                            android:contentDescription="@drawable/context32" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/LayoutSideStackMsgCard"
                    android:layout_width="380dp"
                    android:layout_height="150dp"
                    android:background="@drawable/message"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/LinearLayout05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/ImageView04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/msg32" />

                        <EditText
                            android:id="@+id/editTextMsgCardTitleSideStack"
                            android:layout_width="290dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="text"/>

                        <ImageButton
                            android:id="@+id/fragment_process_imageButton_ContextInfoCardMsg_SideStack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/context32"
                            android:contentDescription="@drawable/context32" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout06"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/LinearLayout05"
                        android:layout_below="@+id/LinearLayout05" >

                        <CheckBox
                            android:id="@+id/checkBoxMsgCardSendSideStack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_process_send_to" />

                        <CheckBox
                            android:id="@+id/checkBoxMsgCardReciveSideStack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_process_receive_from" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editTextMsgCardReciverSenderSideStack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/LinearLayout06"
                        android:layout_below="@+id/LinearLayout06"
                        android:ems="10"
                        android:inputType="textPersonName" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutCardInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LayoutTaskCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/task"
                android:gravity="top"
                android:inputType=""
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageViewWorkCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@drawable/work32"
                        android:src="@drawable/work32" />

                    <TextView
                        android:id="@+id/textViewWorkCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="@string/fragment_process_what_i_do" />

                    <ImageButton
                        android:id="@+id/fragment_process_imageButton_ContextInfoCardTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@drawable/context32"
                        android:src="@drawable/context32" />

                </LinearLayout>

                <EditText
                    android:id="@+id/editTextWorkCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/linearLayout1"
                    android:layout_alignRight="@+id/linearLayout1"
                    android:layout_below="@+id/linearLayout1"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutMsgCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/message"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/imageViewMsgCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:contentDescription="@drawable/msg32"
                        android:inputType="text"
                        android:src="@drawable/msg32" />

                    <EditText
                        android:id="@+id/editTextMsgCardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text" >

                        <requestFocus />
                    </EditText>

                    <ImageButton
                        android:id="@+id/fragment_process_imageButton_ContextInfoCardMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@drawable/context32"
                        android:src="@drawable/context32" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/linearLayout2"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_weight="1.4" >

                    <CheckBox
                        android:id="@+id/checkBoxMsgCardSend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/fragment_process_send_to" />

                    <CheckBox
                        android:id="@+id/checkBoxMsgCardRecive"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/fragment_process_receive_from" />

                </LinearLayout>

                <EditText
                    android:id="@+id/editTextMsgCardReciverSender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/linearLayout3"
                    android:layout_below="@+id/linearLayout3"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>
 
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
